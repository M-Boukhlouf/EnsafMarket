
@{
    ViewBag.Title = "Contacts";
}
@model EnsafMarket.WebApp.Areas.Admin.ViewModels.ContactsViewModel


<div class="container-fluid">
    <h1 class="mt-4">Contacts</h1>
    <div class="card mb-4">
        <div class="card-header"><i class="fas fa-table mr-1"></i>Liste des contacts</div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Annonce</th>
                            <th>Initié par:</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>#</th>
                            <th>Annonce</th>
                            <th>Initié par:</th>
                            <th>Date</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var contact in Model.Contacts)
                        {
                        <tr>
                            <td>@contact.Id</td>
                            <td>@contact.Advertisement.Title</td>
                            <td>@contact.User.FirstName @contact.User.LastName</td>
                            <td>@contact.CreatedAt</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>