
@{
    ViewBag.Title = "Annonces";
}
@model EnsafMarket.WebApp.Areas.Admin.ViewModels.AdvertisementsViewModel


<div class="container-fluid">
    <h1 class="mt-4">Annonces</h1>
    <div class="card mb-4">
        <div class="card-header"><i class="fas fa-table mr-1"></i>Liste des annonces</div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Titre</th>
                            <th>Par</th>
                            <th>Date</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>#</th>
                            <th>Titre</th>
                            <th>Par</th>
                            <th>Date</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var advertisement in Model.Advertisements)
                        {
                            <tr>
                                <td>@advertisement.Id</td>
                                <td>@advertisement.Title</td>
                                <td>@advertisement.Owner.FirstName @advertisement.Owner.LastName</td>
                                <td>@advertisement.CreatedAt</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>