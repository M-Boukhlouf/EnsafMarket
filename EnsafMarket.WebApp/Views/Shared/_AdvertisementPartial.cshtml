@model EnsafMarket.Core.Models.Advertisement

@{
    var type = Model.Type == EnsafMarket.Core.Models.AdvertisementType.Offer ? "Offre" : "Demande";
    var contentType = Model.ContentType == EnsafMarket.Core.Models.AdvertisementContentType.Product ? "Produit" : "Service";
    var subtitle = $"{type} de {contentType.ToLower()}";
}

<div class="card w-100 my-2">
    <div class="card-body">
        <div class="row align-items-center">
            <div class="col-md-8">
                <div class="row">
                    <div class="col-md-12">
                        <h4>@Model.Title</h4>
                        <p>@subtitle</p>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-4">
                        <b>Date:</b>
                    </div>
                    <div class="col-md-8">
                        <p>
                            @Model.CreatedAt
                        </p>
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                @using (Html.BeginForm("Details", "Advertisement", new { id = Model.Id }, FormMethod.Get))
                {
                    <button class="btn btn-outline-primary" type="submit">Détails</button>
                }
            </div>
        </div>
    </div>
</div>