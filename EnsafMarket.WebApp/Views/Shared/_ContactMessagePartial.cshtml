@using EnsafMarket.Core.Models

@model ContactMessage

<div class="card w-100 my-2">
    <div class="card-body">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="col-md-12">
                        <small>@Model.DateTime</small>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <p>
                            <b>@Model.User.FirstName @Model.User.LastName: </b>
                            @Model.Content
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>